\usefonttheme{default}

\definecolor{skyblue}{RGB}{179,231,255}
\definecolor{lightsky}{RGB}{213,242,255}
\definecolor{darksky}{RGB}{130,170,255}
\definecolor{limegreen}{RGB}{153,255,51}
\definecolor{darkgreen}{RGB}{100,210,20}
\definecolor{lightlime}{RGB}{213,255,171}
\definecolor{lightgrey}{RGB}{178,178,178}
\definecolor{midgrey}{RGB}{61,68,73}
\definecolor{faded}{RGB}{116,123,125}
\definecolor{darkgrey}{RGB}{22,26,28}

\setbeamercolor*{normal text}{fg=midgrey,bg=white} 
\setbeamercolor*{alerted text}{fg=limegreen} 
\setbeamercolor*{example text}{fg=midgrey} 

\setbeamercolor*{palette primary}{fg=skyblue,bg=darkgrey} 
\setbeamercolor*{palette secondary}{fg=limegreen,bg=darkgrey} 
\setbeamercolor*{palette tertiary}{fg=skyblue,bg=darkgrey} 
\setbeamercolor*{palette quaternary}{fg=limegreen,bg=darkgrey} 

\setbeamercolor*{structure}{fg=limegreen}

\setbeamercolor*{title}{fg=black,bg=white}
\setbeamerfont{title}{series=\bfseries}

\setbeamerfont{author}{size=\small}

\setbeamercolor{frametitle}{fg=black}

\setbeamerfont{EIS title}{size=\Large,series=\bf}
\setbeamercolor{EIS top}{parent=palette primary}
\setbeamerfont{EIS top}{size=\small}
\setbeamercolor{EIS bottom}{parent=palette secondary}
\setbeamerfont{EIS bottom}{size=\tiny}
\setbeamercolor{EIS school}{parent=palette primary}
\setbeamerfont{EIS authors}{size=\small}
\setbeamercolor{EIS authors}{parent=palette secondary}
\setbeamercolor{EIS stripe}{bg=midgrey}

\setbeamercolor{itemize item}{fg=limegreen}
\setbeamercolor{itemize subitem}{fg=skyblue}
\setbeamercolor{itemize subsubitem}{fg=lightgrey}

\setbeamercolor{enumerate item}{fg=darksky}
\setbeamercolor{enumerate subitem}{fg=darkgreen}
\setbeamercolor{enumerate subsubitem}{fg=lightgrey}

