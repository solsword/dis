% Header (uses frame title instead...)
\defbeamertemplate*{headline}{EIS theme}{\vspace{0em}}

% Frame title
\defbeamertemplate*{frametitle}{EIS theme}
{%
  \leavevmode%
  \vskip-0.3in%
  \begin{beamercolorbox}[wd=\paperwidth,ht=3ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm]{EIS top}%
    \usebeamerfont{EIS title} \insertframetitle \hfill
  \end{beamercolorbox}%
  \vskip-0.1in%
  \hbox{\begin{beamercolorbox}[wd=\paperwidth,ht=0.7ex]{EIS stripe}%
  \end{beamercolorbox}}%
  \vskip0pt%
}

% Footer
\defbeamertemplate*{footline}{EIS theme}
{%
  \leavevmode%
  \hbox{\begin{beamercolorbox}[wd=\paperwidth,ht=3.5ex,dp=2.125ex,leftskip=.3cm,rightskip=.3cm]{EIS bottom}%
    \usebeamerfont{EIS bottom}expressive{\color{skyblue}intelligence}studio \hfill {\color{skyblue}UC Santa Cruz}
  \end{beamercolorbox}}%
  \vskip-1pt%
  \hbox{\begin{beamercolorbox}[wd=\paperwidth,ht=0.7ex]{EIS stripe}%
  \end{beamercolorbox}}%
  \vskip0pt%
}

